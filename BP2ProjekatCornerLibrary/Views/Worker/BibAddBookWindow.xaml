					<TextBox x:Name="tbBrIzd"
						 FontSize="15"
						 VerticalContentAlignment="Center"
						 Grid.Row="10"
						 Grid.Column="1">1</TextBox>
					
					<Label FontSize="15" 
					   HorizontalAlignment="Right"
					   Grid.Column="0"
					   Grid.Row="12">Žanr:</Label>
					<ComboBox Name="cbZanr" Width="250" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="15" Grid.Column="1" Grid.Row="12"
					DisplayMemberPath="NazivZanra"		SelectedValuePath="Oznz">

					</ComboBox>

					<Label FontSize="15" 
					   HorizontalAlignment="Right"
					   Grid.Column="0"
					   Grid.Row="14">Jezik:</Label>
					<ComboBox Name="cbJezik" Width="250" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="15" Grid.Column="1" Grid.Row="14"
